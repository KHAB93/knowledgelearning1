{% extends 'base.html.twig' %}

{% block title%} accueil {%endblock%}

{% block body %} 

 <!-- Image positionnée en haut à gauche -->
    <img src="{{ asset('uploads/images/logo.png') }}" 
         alt="Logo" 
         style="position: absolute; top: 10px; left: 10px; width: 100px; z-index: 1000;">

<div class="container">
    
    <div class="row">
        {% for product in products %}
            <div class="col-md-3"> 
                <div class="card" style="width: 18rem;">
                    <img src="{{ asset('uploads/images/' ~ product.image) }}" class="card-img-top" alt="{{ product.name }}">

                    <div class="card-body">
                        <a style="text-decoration: none; color: black" href="{{ path('app_home_page_product_show',{'id':product.id}) }}"> 
                            <h5 class="card-title">{{ product.name }}</h5>
                        </a>
                        <p class="card-text">{{ product.description|slice(0,60) }} ..</p>

                        <p class="card-text fw-bold">{{ product.price }} €</p>

                        <a href="{{ path('app_cart_new',{'id':product.id}) }}" class="text-success text-decoration-none">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

