{% extends 'base.html.twig' %}

{% block title%} accueil {%endblock%}

{% block body%} 

<div class="container mt-5">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    {% for product in products %}
      <div class="col">
        <div class="card h-100">
          <img 
            src="{{ asset('uploads/images/' ~ product.image) }}" 
            class="card-img-top"
            alt="{{ product.name }}"
            style="height: 200px; object-fit: contain;"
          >
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{ product.name }}</h5>
            <p class="card-text">{{ product.description }}</p>
            <p class="fw-bold">{{ product.price }} €</p>
            <a href="{{ path('app_cart_new', { id: product.id }) }}" class="btn btn-success mt-auto">Ajouter au panier</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>


<h2>Derniers produits ajoutés</h2>


    <div class="row">
        {% for product in products %}
            <div class="col-md-3"> 
                <div class="card" style="width: 18rem;">
                    <img src="{{ asset('uploads/images/'~product.image) }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <a style="text-decoration: none; color: black" href="{{ path('app_home_page_product_show',{'id':product.id}) }}"></a>
                        <p class="card-text">{{ product.description|slice(0,60) }} ..</p>
                        <a href="{{ path('app_cart_new',{'id':product.id}) }}" class="text-success text-decoration-none">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}