{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}

    <div class="container"><br><br>
        <h1>Produits</h1><br><br>
        {% include 'layouts/_flash_message.html.twig' %}
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Size</th>
                    <th>Stock</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description|slice(0,60) }} ...</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.size }}</td>
                    <td>{{ product.stock }}</td>
                    <td>
                        {% if product.stock > 0 %}
                            {{ product.stock }}

                        {% else %}
                            <span class"text-bg-danger">Stock épuisé</span>
                        {% endif %}
                    </td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_product_show', {'id': product.id}) }}">voir</a>
                        <a class="btn btn-outline-success" href="{{ path('app_product_edit', {'id': product.id}) }}">modifier</a>
                        <a class="btn btn-outline-info" href="{{ path('app_product_stock_add',{'id':product.id}) }}">Ajouter le stock</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('app_product_new') }}">Create new</a>
    </div>
{% endblock %}
