

{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Produits</h1>
        <div class="row">
            {% for product in products %}
                <div class="col-6 col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="{{ asset('uploads/images/' ~ product.image) }}"
                             class="card-img-top"
                             alt="{{ product.name }}">
                        <div class="card-body d-flex flex-column">

                            {# Affichage des catégories et sous-catégories #}
                            {% if product.subCategories is not empty %}
                                <p class="mb-2">
                                    {% for subCategory in product.subCategories %}
                                        <span class="badge bg-info text-dark">
                                            {{ subCategory.category.name }}
                                        </span>
                                        <span class="badge bg-secondary">
                                            {{ subCategory.name }}
                                        </span>
                                    {% endfor %}
                                </p>
                            {% endif %}

                            <a href="{{ path('app_home_page_product_show', {'id': product.id}) }}"
                               style="text-decoration: none; color: inherit;">
                                <h5 class="card-title">{{ product.name }}</h5>
                            </a>

                            <p class="card-text small text-truncate">
                                {{ product.description|slice(0, 60) ~ '...' }}
                            </p>

                            <div class="mt-auto">
                                <p class="fw-bold">{{ product.price }} €</p>
                                <a href="{{ path('app_cart_new', { id: product.id }) }}"
                                   class="btn btn-success btn-sm w-100">
                                    Ajouter au panier
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucun produit trouvé.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
